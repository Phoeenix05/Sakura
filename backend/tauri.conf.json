{
  "build": {
    "beforeBuildCommand": "cd frontend && trunk build",
    "beforeDevCommand": "cd frontend && trunk serve",
    "devPath": "http://localhost:8080",
    "distDir": "../frontend/dist/",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "MangaDex Reader",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": true
    },
    "bundle": {
      "active": true,
      "category": "Entertainment",
      "copyright": "MIT License",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "io.github.phoeenix05.mangadex-reader",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "MangaDex Reader",
        "width": 1280,
        "height": 800
      }
    ]
  }
}
